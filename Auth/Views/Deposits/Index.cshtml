@using Auth.Views.Manage
@model IEnumerable<Auth.Models.Deposit>

@{
    ViewData["Title"] = "Deposits";
    ViewData.AddActivePage(ManageNavPages.DepositHistory);
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<h2>Deposits</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet.WalletIdentifier)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wallet.WalletIdentifier)
                </td>
            </tr>
        }
    </tbody>
</table>
