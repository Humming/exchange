@using Auth.Views.Manage
@model Auth.Models.Deposit

@{
    ViewData["Title"] = "Deposit";
    ViewData.AddActivePage(ManageNavPages.Deposit);
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<h2>Deposit funds</h2>

<h4>Deposit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" value=""/>
                <span asp-validation-for="Amount" class="text-danger"></span>

                <input asp-for="Wallet" value="Wallet.WalletIdentifier" readonly="readonly" />
            </div>

            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
